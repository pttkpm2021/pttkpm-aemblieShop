<%- include('header', { title: 'Quản lý đơn hàng', title_c: 'Quản lý đơn hàng' }); -%>
	<!-- MAIN PANEL -->
	<div id="main" role="main">

		<!-- RIBBON -->
		<div id="ribbon">

			<span class="ribbon-button-alignment">
				<span id="refresh" class="btn btn-ribbon" data-action="resetWidgets" data-title="refresh" rel="tooltip"
					data-placement="bottom"
					data-original-title="<i class='text-warning fa fa-warning'></i> Warning! This will reset all your widget settings."
					data-html="true">
					<i class="fa fa-refresh"></i>
				</span>
			</span>

			<!-- breadcrumb -->
			<ol class="breadcrumb">
				<li>Trang chính</li>
				<li>Kho hàng</li>
				<li>Quản lý đơn hàng</li>
			</ol>
			<!-- end breadcrumb -->

		</div>
		<!-- END RIBBON -->

		<!-- MAIN CONTENT -->
		<div id="content">

			<!-- widget grid -->
			<section id="widget-grid" class="">

				<div class="row">
					<div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
						<h1 class="page-title txt-color-blueDark">
							<i class="fa fa-lg fa-fw fa-list-alt"></i>
							Kho hàng
							<span>>
								Quản lý đơn hàng
							</span>
						</h1>
					</div>

					<div class="col-xs-12 col-sm-5 col-md-5 col-lg-8">
						<ul id="sparks" class="">
							<li class="sparks-info">
								<h5> Tháng <%= moment().format('MM') %> <span class="txt-color-greenDark"><i class="fa fa-shopping-cart"></i>&nbsp;<%= countOrdersSuccess %></span></h5>
								<div class="sparkline txt-color-greenDark hidden-mobile hidden-md hidden-sm">
									110,150,300,130,400,240,220,310,220,300, 270, 210
								</div>
							</li>
						</ul>
					</div>
				</div>

				<!-- row -->
				<div class="row">

					<!-- NEW WIDGET START -->
					<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

						<!-- Widget ID (each widget will need unique ID)-->
						<div class="jarviswidget jarviswidget-color-darken" id="wid-id-0"
							data-widget-deletebutton="false" data-widget-togglebutton="false"
							data-widget-editbutton="false">

							<header>
								<span class="widget-icon"> <i class="fa fa-table"></i> </span>
								<h2>Danh sách đơn hàng</h2>

							</header>

							<!-- widget div-->
							<div>

								<!-- widget edit box -->
								<div class="jarviswidget-editbox">
									<!-- This area used as dropdown edit box -->

								</div>
								<!-- end widget edit box -->

								<!-- widget content -->
								<div class="widget-body no-padding">

									<table id="dt_basic" class="table table-striped table-bordered table-hover"
										width="100%">
										<thead>
											<tr>
												<th data-hide="phone,tablet">ID</th>
												<th data-hide="phone"><i
													class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i>
													Tên khách hàng</th>
												<th data-hide="phone"><i
													class="fa fa-fw fa-mobile txt-color-blue hidden-md hidden-sm hidden-xs"></i>
													Số điện thoại</th>
												<th data-hide="phone,tablet"><i
													class="fa fa-fw fa-envelope-o txt-color-blue hidden-md hidden-sm hidden-xs"></i>
													Email</th>
												<th data-hide="expand"><i
													class="fa fa-fw fa-sitemap txt-color-blue hidden-md hidden-sm hidden-xs"></i>
													Tổng cộng</th>
												<th data-hide="phone,tablet"><i
													class="fa fa-fw fa-calendar txt-color-blue hidden-md hidden-sm hidden-xs"></i>
													Ngày tạo</th>
												<th data-hide="expand"><i
														class="fa fa-fw fa-sliders text-muted hidden-md hidden-sm hidden-xs"></i>
													Trạng thái</th>
												<th data-hide="phone,tablet"><i
														class="fa fa-fw fa-cog text-muted hidden-md hidden-sm hidden-xs"></i>
													Thao tác</th>
											</tr>
										</thead>
										<tbody>
											<% if(orders) { %>
												<% orders.forEach(function(order, index){ %>
													<tr class="<%= (order.isDeleted) ? 'strikeout' : '' %>">
														<td><%= order.id %></td>
														<td><a href="/admincp/orders/detail/<%= order.id %>"><%= order.customer_name %></a></td>
														<td class="text-center"><%= order.customer_phone %></td>
														<td class="text-center"><%= order.customer_email %></td>
														<td class="text-center"><%= order.total_price.toLocaleString('it-IT') %>₫</td>
														<td class="text-right"><%= order.createdAt.toLocaleDateString() %></td>

														<% if(order.status == 0) { %>
															<td class="text-center"><div class="label label-warning">Chưa xác nhận</div></td>
														<% } else if(order.status == -1) { %>
															<td class="text-center"><div class="label label-default">Thất bại</div></td>
														<% } else if(order.status == 1) { %>
															<td class="text-center"><div class="label label-success">Thành công</div></td>
														<% } else if(order.status == 2) { %>
															<td class="text-center"><div class="label label-info">Chờ thanh toán</div></td>
														<% } else if(order.status == 3) { %>
															<td class="text-center"><div class="label label-info">Đang giao hàng</div></td>
														<% } %>

														<td class="text-center">
															<a href="/admincp/orders/detail/<%= order.id %>" class="btn btn-default btn-xs"
																title="Chi tiết"><i class="fa fa-pencil"></i>
															</a>
														</td>
													</tr>
												<% }); %>
											<% } %>
										</tbody>
									</table>

								</div>
								<!-- end widget content -->

							</div>
							<!-- end widget div -->

						</div>
						<!-- end widget -->

					</article>
				</div>
			</section>
			<!-- end widget grid -->
		</div>
		<!-- END MAIN CONTENT -->

	</div>
	<!-- END MAIN PANEL -->
<%- include('footer') -%>